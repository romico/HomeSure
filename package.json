{
  "name": "homesure",
  "version": "1.0.0",
  "description": "부동산 토큰화 플랫폼 - 블록체인 기반 부동산 투자 플랫폼",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "node": "hardhat node",
    "deploy": "hardhat run scripts/deploy.ts",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon-mumbai",
    "test:property": "hardhat run scripts/test-property-registration.ts",
    "test:trading": "hardhat run scripts/test-trading-system.ts",
    "verify": "hardhat verify",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write '**/*.{js,ts,json,md}'",
    "format:check": "prettier --check '**/*.{js,ts,json,md}'",
    "prepare": "husky install",
    "clean": "hardhat clean",
    "size": "hardhat size-contracts"
  },
  "keywords": [
    "blockchain",
    "real-estate",
    "tokenization",
    "ethereum",
    "polygon"
  ],
  "author": "HomeSure Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.1",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^6.1.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": "^20.0.0",
    "chai": "^4.3.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.1",
    "hardhat-contract-sizer": "^2.8.0",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "prettier-plugin-solidity": "^1.3.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.0.0",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.8.0",
    "ipfs-http-client": "^60.0.1"
  },
  "lint-staged": {
    "*.sol": [
      "solhint --fix",
      "prettier --write"
    ],
    "*.{js,ts,json,md}": [
      "prettier --write"
    ]
  }
}
